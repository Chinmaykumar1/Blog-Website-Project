<%- include('partials/header') %>
<h1>   Compose</h1>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<form action="/blog" method="post" style="padding: 50px; margin: 20px;">
    <div class="form-group" style="margin-bottom: 15px;">
        <label>Title</label>
        <input class="form-control" type="text" name="post">
    </div>
    <div class="form-group" style="margin-bottom: 15px;">
        <label>Post</label>
        <textarea class="form-control" name="userInput" rows="4" cols="50"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>


